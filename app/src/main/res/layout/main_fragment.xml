<?xml version="1.0" encoding="utf-8"?>

<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/main"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.MainFragment">
        <TextView
            android:id="@+id/odswiez_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:text="Kliknij tu lub przeciągnij z góry do dołu aby odświeżyć"/>

            <!--        <androidx.recyclerview.widget.RecyclerView-->
            <!--            android:id="@+id/recycler_view"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="match_parent" />-->


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:id="@+id/ogloszenia_layout"
                    android:background="@color/colorAccent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ogloszeniaIV"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:contentDescription="Ogłoszenia"
                        android:src="@drawable/ic_list" />

                    <TextView
                        android:id="@+id/ogloszeniaTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/colorPrimaryLight"
                        android:textSize="20sp"
                        android:text="Ogłoszenia" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:id="@+id/aktualnosci_layout"
                    android:background="@color/colorAccent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/aktualnosciIV"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:contentDescription="Aktualności"
                        android:src="@drawable/ic_link" />

                    <TextView
                        android:id="@+id/aktualnosciTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/colorPrimaryLight"
                        android:textSize="20sp"
                        android:text="Aktualności" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@color/colorAccent"
                    android:layout_margin="10dp"
                    android:id="@+id/intencje_layout"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/intencjeIV"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:contentDescription="Intencje"
                        android:src="@drawable/ic_cross" />

                    <TextView
                        android:id="@+id/intencjeTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/colorPrimaryLight"
                        android:textSize="20sp"
                        android:text="Intencje" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@color/colorAccent"
                    android:layout_margin="10dp"
                    android:id="@+id/parafia_layout"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/parafiaIV"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:contentDescription="Parafia"
                        android:src="@drawable/ic_church" />

                    <TextView
                        android:id="@+id/parafiaTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/colorPrimaryLight"
                        android:textSize="20sp"
                        android:text="Parafia" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@color/colorAccent"
                    android:layout_margin="10dp"
                    android:id="@+id/sakramenty_layout"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/sakramentyIV"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:contentDescription="Sakramenty"
                        android:src="@drawable/ic_holy_ghost" />

                    <TextView
                        android:id="@+id/sakramentyTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/colorPrimaryLight"
                        android:textSize="20sp"
                        android:text="Sakramenty" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@color/colorAccent"
                    android:layout_margin="10dp"
                    android:id="@+id/kontakt_layout"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/kontaktIV"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:contentDescription="Kontakt"
                        android:src="@drawable/ic_letter" />

                    <TextView
                        android:id="@+id/kontaktTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/colorPrimaryLight"
                        android:textSize="20sp"
                        android:text="Kontakt" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>