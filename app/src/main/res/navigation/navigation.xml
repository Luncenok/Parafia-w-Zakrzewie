<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="pl.godziszewo.kosciol.kosciolui.ui.home.HomeFragment"
        tools:layout="@layout/home_fragment">
        <action
            android:id="@+id/action_to_infoFragment"
            app:destination="@id/infoFragment" />
        <action
            android:id="@+id/action_to_galleriesFragment"
            app:destination="@id/galleriesFragment" />
    </fragment>
    <fragment
        android:id="@+id/infoFragment"
        android:name="pl.godziszewo.kosciol.kosciolui.ui.info.InfoFragment"
        tools:layout="@layout/info_fragment" />
    <fragment
        android:id="@+id/galleriesFragment"
        android:name="pl.godziszewo.kosciol.kosciolui.ui.galleries.GalleriesFragment"
        tools:layout="@layout/galleries_fragment" >
        <action
            android:id="@+id/action_galleriesFragment_to_galleryFragment"
            app:destination="@id/galleryFragment" />
    </fragment>
    <fragment
        android:id="@+id/galleryFragment"
        android:name="pl.godziszewo.kosciol.kosciolui.ui.gallery.GalleryFragment"
        tools:layout="@layout/gallery_fragment" />
</navigation>